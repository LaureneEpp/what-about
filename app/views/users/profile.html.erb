<div class="container container-profile">
    <div class="row">
        <div class="profile-avatar">
            <% if @user.avatar.attached? %>
                <%= image_tag (@user.avatar), class:'rounded-circle', size: '200x200'  %>
            <% end %>
        </div>
        <div class="profile-title">
            <h2>Profile</h2>
        </div>
        <div class="profile-information">
            <h3><%= @user.fullname %></h3>
            <h6 class="d-flex">
                <%= pluralize(@posts_count, "Posts") %> |
                <%= pluralize(@followees_count, "Followers") %>
            </h6>
            <h6 class="d-flex">
            <%= link_to 'Contact', user_path(@user), class:"btn btn-info mx-2 " %>
            <% if current_user.followees.include?(@user) %>
                <%= button_to "Unfollow", unfollow_user_path, method: "POST", class:"btn btn-update mx-2" %>
            <% else %>
                <%= button_to "Follow", follow_user_path, method: "POST", class:"btn btn-update mx-2"  %>
            <% end%>
            </h6>
            <h6><%= @user.bio %></h6>
        </div>
    </div>
    <div class="row">
        <div class="col-1">
        </div>
        <div class="col-10">
            <% @posts.each do |post| %>
                <div class="card card-post-profile mt-3">
                    <div class="card-body">
                        <h5 class="card-title fs-3 fw-bold text-uppercase"><%= link_to post.title, post %></h5>
                        <p class="card-text fs-6"><%= "#{time_ago_in_words(post.created_at)} ago" %></p>
                        <p class="card-text fs-6 lh-base"><%= post.content.truncate_words(50) %></p>
                    </div>
                </div>
            <% end %>
        </div>
        <div class="col-1"></div>
    </div>
</div>
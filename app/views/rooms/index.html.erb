<div id="chatroom_container" class="row">
  <div id="side_panel" class="col-md-4 col-sm-4">
    <div class="panel-title">
      <h3>Who can you interact with?</h3>
    </div>
    <%= turbo_stream_from "users" %>
    <div id="users">
      <%= render @users %>
    </div>
    <div class="panel-title">
      <h3>What about?</h3>
    </div>
    <%= turbo_stream_from "rooms" %>
    <div id="rooms">
      <%= render @rooms%>
    </div>
    <%= render 'rooms/new_room_form' %>
  </div>
  <div id="room_container" class="col-md-8 col-sm-8 bg-green text-light">
    <% if @single_room %>
      <div id="single_room" class="h-100">
        <h3 class="text-center"> <%= @user&.email || @single_room.name %> </h3>
        <%= turbo_stream_from @single_room %>
        <div id="messages" data-controller="scroll">
          <%= render @messages %>
        </div>
        <%= render 'messages/new_message_form' %>
      </div>
    <% end %>
  </div>
</div>
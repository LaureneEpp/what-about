  <%= turbo_frame_tag post do %>
  <div class="col">
    <div class="card-image">
        <% if can? :read, post %>
          <%= link_to post_path(post.id), data: { turbo_frame: "_top" } do %>
            <% if post.image.present? %>
              <%= image_tag post.image.variant(:thumb), class:"img-fluid img-thumbnail" %>
            <% else %>
              <%= image_tag("landscape01.jpeg", alt: "default", size: '500x500', class:"img-fluid img-thumbnail") %>
            <% end %>
          <% end %>
        <% end %>
      <div class="card-information">
        <div class="card-title">
          <% if can? :read, post %>
            <%= link_to post_path(post.id), data: { turbo_frame: "_top" } do %>
              <h3 class="title"><%= post.title.upcase %></h3>
            <% end %>
          <% end %>
          <% if can? :destroy, post  %>
            <%= button_to post_path(post.id), method: :delete, class: "icon-delete" do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
              </svg>
            <% end %>
          <% end %>
        </div>
        <% if can? :read, post %>
          <%= link_to post_path(post.id), data: { turbo_frame: "_top" } do %>
            <h4 class="subtitle"><%= post.category.name %></h4>
            <p class="date"><%= post.created_at.strftime("%d/%m/%Y")%></p>
          <% end %>
        <% end %>
      </div>
    </div>   
  </div>
<% end %>
<div class="post">
  <div class="post_content">
    <h2 class="title"><%= link_to post.title, post_path(post) %></h2>
    <p class="date"><%= post.created_at.strftime('%B, %d, %Y')%></p>
  </div> 
  <div class="post__actions">
    <%= button_to "Delete",
                  post_path(post),
                  method: :delete,
                  class: "btn btn--light" %>
    <%= link_to "Edit",
                edit_post_path(post),
                class: "btn btn--light" %>
  </div>
</div>

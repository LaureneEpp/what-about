<%= turbo_frame_tag comment do %>
  <div class="comment">
    <div class="comment-header">
      <h4 class="comment-title">
        <%= link_to comment.name, post_comment_path(@post, comment) %> | <%= comment.created_at.strftime("%d/%m/%Y") %>
      </h4>
        <div class="comment-actions">
          <% if can? :update, @post => Comment %>
            <%= link_to edit_post_comment_path(post, comment), class:"icon-edit icon-comment-action" do %>
              <i class="bi bi-pencil-square"></i>
            <% end %>
          <% end %>
          <% if can? :destroy, @post => Comment %>
            <%= button_to post_comment_path(post, comment), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class:"icon-delete icon-comment-action" do %>
              <i class="bi bi-x-circle-fill"></i>
            <% end %>
          <% end %>
        </div>
    </div>
  </div>
<% end %>
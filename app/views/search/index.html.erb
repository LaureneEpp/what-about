<h1 class="text-center"><%= pluralize(@posts.count, "Result") %></h1>

<div class="container">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
            <th><%= sort_link(@query, :title, "Title", default_order: :asc) %></th>
            <th><%= sort_link(@query, :subtitle, "Subtitle") %></th>
            <th><%= sort_link(@query, :category.name, "Category") %></th>
            </tr>
        </thead>
        <tbody>
            <% @posts.each do |post|  %>
                <tr>
                    <td><%= link_to post.title, post %></td>
                    <td><%= post.subtitle.truncate_words(35) %></td>
                    <td><%= post.category.name %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
<div class="container container-categories">
    <div class="index-title py-5">
        <h1>Categories</h1>
    </div>
    <% @categories.each do |category| %>
        <% if category.posts.present? %>
        <div id="category-index">
            <div class="category-title">
                <h3><%= category.name %></h3>
            </div>
            <hr>
            <%= render category %>
        </div>
        <% end %>
    <% end %>
</div>
